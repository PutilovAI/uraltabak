.shop_item-wrap
    display flex
    justify-content: start
    flex-wrap: wrap

.shop_item,
.usweb-shop-special
    column(3/12, offset: 0, gutter: 2.5)
    text-align: center
    margin-bottom: 30px
    &:nth-child(4n)
        margin-right 0


    .img_box,
    .usweb-shop-special-img-box
        height: 260px

        width 100%
        background: #fff
        display flex
        align-items: center
        justify-content: center
        margin-bottom: 15px

        a
            display inline-block
            width: 100%
            text-align: center

        img
            max-width: 100%
            display inline-block
    .eshopTitle,
    .usweb-shop-special-title
        a
            color #391e0b
            text-decoration: none
            font-size: 14px
            &:hover
                color $color-link-hover


+below($mobile)
    .shop_item,
    .usweb-shop-special
        column(6/12, offset: 0, gutter: 2.5)
        &:nth-child(2n)
            margin-right 0

+below($mobileSmall)
    .shop_item,
    .usweb-shop-special
        column(12/12, offset: 0, gutter: 0)

        .img_box,
        .usweb-shop-special-img-box
            height: 200px
            img
                max-height: 200px
