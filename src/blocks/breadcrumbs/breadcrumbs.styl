.breadcrumbs
    margin-bottom 15px
    &__link
        color #fff
        text-decoration: none
        border-bottom 1px solid $color-second
        transition all 0.2s
        &:hover
            color $color-second
            text-decoration: none

    &__item
        display inline-block
        margin-right 30px
        position: relative
        &:after
            content ''
            width 6px
            height @width
            border 1px solid $color-second
            pos-center-h()
            right -20px

        &:last-child
            margin-right 0
            &:after
                display: none

        &.active
            & ^[0]__link
                border-color transparent
                &:hover
                    border-color transparent
                    color #fff
