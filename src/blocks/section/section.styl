.section
    width 100%
    position relative
    padding 0px 0 30px

    &__title
        text-align: center;
        overflow: hidden;
        margin-bottom 30px
        &_main
            margin-top: 13px;

    &__title-content
        display inline-block
        vertical-align: middle
        position: relative
        margin 0 10px
        padding 0 35px
        &:after, &:before
            content ''
            position: absolute;
            top 50%
            width 9999px
            height 1px
            background-color rgba($color-main, 0.5)

        &:after
            right calc(100% + 10px)
        &:before
            left calc(100% + 10px)

    &__title-text
        position: relative
        font-size $fsH2
        color $color-main
        text-transform uppercase
        display inline-block
        line-height 1.3
        &:after, &:before
            content ''
            width 27px
            height 14px
            pos-center-h()
            background-position: center
            background-repeat: no-repeat
            background-size: 100%
            background-image url('../images/icon_sheet.svg')

        &:before
            left -40px
            transform rotateY(180deg) translateY(-50%)
        &:after
            right -40px
