.input
    position: relative
    &__text
        font-size: 16px
        padding 0.6em 1em
        background-color $input-bg
        border 2px solid transparent
        outline none
        border-radius 3px
        color $input-color
        transition all 0.2s linear
        width: 100%
        min-width: 240px

        &:hover
            border-color rgba($input-border, 0.8)

        &:focus
            outline none
            border-color rgba($input-border, 1)
            background-color rgba($input-bg, 0.8)

        &_norm
            max-width: 240px
        &_full
            max-width: 100%

    &__label
        font-size: 16px
        margin-bottom 8px
        &_required
            &:after
                content '*'
                display inline-block
                color $color-red
                position: relative
                margin-left 3px
                top -2px


    &__error
        display: none
        position: absolute
        bottom -30px
        color: $input-error
        &_rel
            bottom 0
            position: relative
            margin-top 10px
        &_reverse
            color #ff8b8f

    //Status input wrapper
    &.succes
        & ^[0]__text
            border-color rgba($input-border, 1)
            &:hover
                border-color rgba($input-border, 1)

    &.error
        & ^[0]__text
            border-color rgba($input-border-error, 0.8)
            &:hover
                border-color  rgba($input-border-error, 0.9)

            &:focus
                border-color rgba($input-border-error, 1)
                background-color rgba($input-bg, 0.8)
